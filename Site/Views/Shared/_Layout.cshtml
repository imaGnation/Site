<body class="body">

    <div class="SideHeader">

        <nav>

            <ul>
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Log Out", "Logout", "User")</li>
                    
                    string name = @Html.Encode(User.Identity.Name);
                    <li>@Html.ActionLink(name,"#","#")</li>
                    

                    
                }
                else
                {
                    <li>@Html.ActionLink("Register", "Register", "User")</li>
