                    <li>@Html.ActionLink("Products/Services", "Product_Services", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                }
                else if (@ViewBag.Title == "Product_Services")
                {
                    <li>@Html.ActionLink("Home", "Home", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="active" style="color:#fff;">@Html.ActionLink("Products/Services", "Product_Services", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Home", "Home", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Products/Services", "Product_Services", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                }

            </ul>
        </nav>

    </header>
    

            @RenderSection("featured", required: false)


            @Scripts.Render("~/bundles/jquery")
